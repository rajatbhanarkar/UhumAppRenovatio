<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:clipToPadding="false"
    android:background="@color/bgcolor"
    tools:context=".SignUpActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="-10dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/_30sdp">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/periwinkle"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginLeft="-30dp"
        android:layout_marginBottom="-30dp"
        app:cardElevation="0dp"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="@dimen/_55sdp">

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/yellow2"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        app:cardElevation="0dp"
        android:layout_alignParentRight="true"
        app:cardCornerRadius="@dimen/_15sdp">

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/palePink"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/_20sdp">

        <ImageView
            android:id="@+id/iv4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/skinColor"/>
    </androidx.cardview.widget.CardView>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_15sdp"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_130sdp"
            android:layout_marginTop="10dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:layout_gravity="center"
            android:src="@drawable/otp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:fontFamily="@font/opensans"
                android:text="Enter the OTP sent to "/>

            <TextView
                android:id="@+id/tvdisplayphoneno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/opensans"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp"
                android:text=" +91-7999876414"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/etotp1"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_margin="5dp"
                android:textColor="@color/darkTextColor"
                android:fontFamily="@font/opensans"
                android:inputType="number"
                android:maxLength="1"
                android:background="@drawable/circle"
                android:backgroundTint="@color/lightSkin"
                android:gravity="center"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp"/>

            <EditText
                android:id="@+id/etotp2"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_margin="5dp"
                android:fontFamily="@font/opensans"
                android:background="@drawable/circle"
                android:backgroundTint="@color/periwinkle"
                android:textColor="@color/darkTextColor"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp"/>

            <EditText
                android:id="@+id/etotp3"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_margin="5dp"
                android:textColor="@color/darkTextColor"
                android:gravity="center"
                android:inputType="number"
                android:backgroundTint="@color/palePink"
                android:fontFamily="@font/opensans"
                android:background="@drawable/circle"
                android:maxLength="1"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp"/>

            <EditText
                android:id="@+id/etotp4"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_margin="5dp"
                android:fontFamily="@font/opensans"
                android:textColor="@color/darkTextColor"
                android:inputType="number"
                android:backgroundTint="@color/skinColor"
                android:background="@drawable/circle"
                android:maxLength="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp"/>

            <EditText
                android:id="@+id/etotp5"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_margin="5dp"
                android:fontFamily="@font/opensans"
                android:textColor="@color/darkTextColor"
                android:inputType="number"
                android:backgroundTint="@color/yellow2"
                android:background="@drawable/circle"
                android:maxLength="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp"/>

            <EditText
                android:id="@+id/etotp6"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_margin="5dp"
                android:fontFamily="@font/opensans"
                android:textColor="@color/darkTextColor"
                android:inputType="number"
                android:backgroundTint="@color/lightSkin"
                android:background="@drawable/circle"
                android:maxLength="1"
                android:gravity="center"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"/>

        <Button
            android:id="@+id/btnverify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/lightTextColor"
            android:fontFamily="@font/opensans"
            android:textAllCaps="false"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_card_corners"
            android:backgroundTint="@color/colorPrimary"
            android:layout_alignParentBottom="true"
            android:textStyle="bold"
            android:padding="@dimen/_12sdp"
            android:textSize="@dimen/_11sdp"
            android:text="Verify"/>


        <LinearLayout
            android:id="@+id/llresend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/opensans"
                android:textSize="@dimen/_12sdp"
                android:text="Didn't recieve OTP?"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/opensans"
                android:textSize="@dimen/_12sdp"
                android:text="Resend OTP"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"/>
    </LinearLayout>

</RelativeLayout>