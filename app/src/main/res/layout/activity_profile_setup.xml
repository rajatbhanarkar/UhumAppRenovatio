<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:background="@color/bgcolor"
    tools:context=".ProfileSetupActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="-10dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/_30sdp">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/periwinkle"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginLeft="-30dp"
        android:layout_marginBottom="-30dp"
        app:cardElevation="0dp"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="@dimen/_55sdp">

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/yellow2"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        app:cardElevation="0dp"
        android:layout_alignParentRight="true"
        app:cardCornerRadius="@dimen/_15sdp">

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/palePink"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/_20sdp">

        <ImageView
            android:id="@+id/iv4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/skinColor"/>
    </androidx.cardview.widget.CardView>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:padding="@dimen/_20sdp"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/opensans"
            android:textSize="@dimen/_17sdp"
            android:text="Setup Your Profile"
            android:textAlignment="center"
            android:textStyle="bold"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivpsaprofilepic"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/profpiclogo"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/yellow2"/>

                    <ImageView
                        android:id="@+id/ivpsaaddpic"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:padding="2dp"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/colorPrimary"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/ic_add"/>
                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/opensans"
                    android:textSize="@dimen/_12sdp"
                    android:text="Add a photo"
                    android:textAlignment="center"
                    android:textStyle="bold"/>
            </LinearLayout>





            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/_120sdp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/ivpsamale"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:src="@drawable/profpiclogo"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/orange"/>

                    <ImageView
                        android:id="@+id/ivpsafemale"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginLeft="@dimen/_60sdp"
                        android:src="@drawable/femaleprofpic"
                        android:background="@drawable/circle"
                        android:backgroundTint="@color/orange"/>
                </RelativeLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/opensans"
                    android:textSize="@dimen/_12sdp"
                    android:text="Choose an avatar"
                    android:textAlignment="center"
                    android:textStyle="bold"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_80sdp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/opensans"
                android:textSize="@dimen/_11sdp"
                android:text="OR"
                android:textAlignment="center"
                android:textStyle="bold"/>
        </RelativeLayout>



        <EditText
            android:id="@+id/etpsafullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/darkTextColor"
            android:textColorHint="@color/darkTextColor"
            android:layout_marginTop="@dimen/_25sdp"
            android:padding="@dimen/_12sdp"
            android:maxLines="1"
            android:hint="Full Name"
            android:fontFamily="@font/opensans"
            android:background="@drawable/rounded_card_corners"
            android:backgroundTint="@color/lightSkin"
            android:inputType="textCapWords"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/_11sdp"/>

        <EditText
            android:id="@+id/etpsaemailadd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/darkTextColor"
            android:textColorHint="@color/darkTextColor"
            android:layout_marginTop="15dp"
            android:padding="@dimen/_12sdp"
            android:maxLines="1"
            android:hint="Email Address"
            android:fontFamily="@font/opensans"
            android:background="@drawable/rounded_card_corners"
            android:backgroundTint="@color/periwinkle"
            android:inputType="textEmailAddress"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/_11sdp"/>

        <EditText
            android:id="@+id/etpsaage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/darkTextColor"
            android:textColorHint="@color/darkTextColor"
            android:layout_marginTop="@dimen/_10sdp"
            android:padding="@dimen/_12sdp"
            android:maxLines="1"
            android:hint="Age"
            android:fontFamily="@font/opensans"
            android:background="@drawable/rounded_card_corners"
            android:backgroundTint="@color/palePink"
            android:inputType="number"
            android:maxLength="3"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/_11sdp"/>

        <Button
            android:id="@+id/btnpsasubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/lightTextColor"
            android:textAllCaps="false"
            android:fontFamily="@font/opensans"
            android:layout_marginTop="@dimen/_25sdp"
            android:background="@drawable/rounded_card_corners"
            android:backgroundTint="@color/colorPrimary"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/_12sdp"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold"
            android:text="Submit"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"/>
    </LinearLayout>

</RelativeLayout>