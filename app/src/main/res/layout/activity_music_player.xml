<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/musicbg32"
    android:clipToPadding="false"
    android:id="@+id/rlmusicbg"
    tools:context=".MusicPlayerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="60dp"
        android:orientation="vertical"
        android:weightSum="6"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvmpatime"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:textAlignment="center"
            android:gravity="center"
            android:fontFamily="@font/opensans"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/_13sdp" />

        <RelativeLayout
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_250sdp"
            android:layout_gravity="center">

            <com.savantech.seekarc.SeekArc
                android:id="@+id/samusicplayer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:arcColor="@color/lightTextColor"
                app:arcWidth="5dp"
                app:startAngle="270"
                app:thumbRadius="15dp"
                app:thumbColor="@color/lightTextColor"
                app:progressColor="@color/colorPrimary"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/ivmpacatpic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="30dp"
                android:src="@drawable/mednewlogo"/>
        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvmpacatname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/opensans"
                android:textStyle="bold"
                android:text="Meditation Songs"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/tvmpasongname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:fontFamily="@font/opensans"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:text="Pure Sounds Of Nature"
                android:textColor="@color/white"
                android:textSize="@dimen/_18sdp" />
        </LinearLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:padding="10dp">

            <ImageView
                android:id="@+id/ivmpaprevious"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/ivplaypause"
                android:layout_marginRight="50dp"
                android:src="@drawable/ic_skip_previous"/>

            <ImageView
                android:id="@+id/ivplaypause"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:padding="@dimen/_12sdp"
                android:layout_centerInParent="true"
                android:background="@drawable/circle"
                android:backgroundTint="@color/lightTextColor"
                android:src="@drawable/ic_play"/>

            <ImageView
                android:id="@+id/ivmpanext"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/ivplaypause"
                android:layout_marginLeft="50dp"
                android:src="@drawable/ic_skip_next"/>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>