    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="150dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                android:fontFamily="@font/dmsans"
                android:text="Your\nCourses"/>

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:progress="50"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/dmsans"
                android:text="Overall Progress"/>
        </LinearLayout>

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="-5dp"
            android:src="@drawable/courses_logo"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:clipToPadding="false"
        android:layout_marginTop="210dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="@dimen/_90sdp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:elevation="0dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/lightSkin">

                <com.theophrast.ui.widget.SquareImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:padding="15dp"
                    android:layout_marginTop="-5dp"
                    android:src="@drawable/courses_logo"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/dmsans"
                    android:textAlignment="center"
                    android:paddingBottom="10dp"
                    android:text="Course 1"
                    android:textColor="@color/darkTextColor"
                    android:textSize="@dimen/_12sdp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="@dimen/_90sdp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:elevation="0dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/periwinkle">

                <com.theophrast.ui.widget.SquareImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:padding="15dp"
                    android:layout_marginTop="-5dp"
                    android:scaleY="1.2"
                    android:scaleX="1.2"
                    android:src="@drawable/courses_logo2"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/dmsans"
                    android:textAlignment="center"
                    android:paddingBottom="10dp"
                    android:text="Course 2"
                    android:textColor="@color/darkTextColor"
                    android:textSize="@dimen/_12sdp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="@dimen/_90sdp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:elevation="0dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/palePink">

                <com.theophrast.ui.widget.SquareImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="-10dp"
                    android:scaleY="1.5"
                    android:scaleX="1.5"
                    android:src="@drawable/courses_logo3"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/dmsans"
                    android:textAlignment="center"
                    android:paddingBottom="10dp"
                    android:text="Course 3"
                    android:textColor="@color/darkTextColor"
                    android:textSize="@dimen/_12sdp" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>

