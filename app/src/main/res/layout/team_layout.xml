<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_20sdp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivteampropic"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_180sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/rajatbhanarkar"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/tvteamname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_gravity="center"
                android:text="Rajat Bhanarkar"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvteamdesignation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_gravity="center"
                android:text="Lead Developer"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:weightSum="4">

                <com.theophrast.ui.widget.SquareImageView
                    android:id="@+id/ivteaminstagram"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_8sdp"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/lightSkin"
                    android:src="@drawable/instalogo"
                    android:padding="@dimen/_16sdp"/>

                <com.theophrast.ui.widget.SquareImageView
                    android:id="@+id/ivteamgmail"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_8sdp"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/periwinkle"
                    android:src="@drawable/gmaillogo"
                    android:padding="@dimen/_16sdp"/>

                <com.theophrast.ui.widget.SquareImageView
                    android:id="@+id/ivteamtwitter"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_8sdp"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/palePink"
                    android:src="@drawable/twitterlogo"
                    android:padding="@dimen/_16sdp"/>

                <com.theophrast.ui.widget.SquareImageView
                    android:id="@+id/ivteamlinkedin"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/_8sdp"
                    android:background="@drawable/circle"
                    android:backgroundTint="@color/skinColor"
                    android:src="@drawable/linkedinlogo"
                    android:padding="@dimen/_16sdp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>