<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f7f7f7"
    android:clipToPadding="false">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_100sdp"
        android:weightSum="2"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvhpacard1"
            android:layout_width="0dp"
            android:layout_height="@dimen/_165sdp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/palePink">

                <com.theophrast.ui.widget.SquareImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:padding="25dp"
                    android:layout_marginTop="-10dp"
                    android:scaleX="1.1"
                    android:scaleY="1.1"
                    android:src="@drawable/meditationlogo2"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/opensans"
                    android:textAlignment="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:elevation="10dp"
                    android:textStyle="bold"
                    android:background="@drawable/card_corners"
                    android:text="Attention &amp;\nAwareness"
                    android:textColor="@color/darkTextColor"
                    android:textSize="@dimen/_12sdp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvhpacard2"
            android:layout_width="0dp"
            android:layout_height="@dimen/_165sdp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:cardElevation="0dp"
            app:cardCornerRadius="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <com.theophrast.ui.widget.SquareImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:padding="25dp"
                    android:layout_marginTop="-10dp"
                    android:scaleX="1.1"
                    android:scaleY="1.1"
                    android:src="@drawable/meditationlogo2"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/opensans"
                    android:textAlignment="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:textStyle="bold"
                    android:background="@drawable/card_corners"
                    android:backgroundTint="@color/palePink"
                    android:text="Attention &amp;\nAwareness"
                    android:textColor="@color/darkTextColor"
                    android:textSize="@dimen/_12sdp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</RelativeLayout>