<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_440sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_card_corners"
    android:backgroundTint="@color/bgcolor">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/_15sdp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="6dp"
            android:background="@color/periwinkle"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_55sdp"
        android:layout_height="@dimen/_55sdp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:cardElevation="0dp"
        android:layout_alignParentRight="true"
        app:cardCornerRadius="@dimen/_27sdp">

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/palePink"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        app:cardElevation="0dp"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="@dimen/_35sdp">

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/yellow2"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/_20sdp">

        <ImageView
            android:id="@+id/iv4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/skinColor"/>
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivumlemotion"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:src="@drawable/donate2"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tvumlmaintext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Dear superhero, help us as much as you can!"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etamount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/darkTextColor"
            android:textColorHint="@color/darkTextColor"
            android:layout_marginTop="@dimen/_20sdp"
            android:padding="@dimen/_12sdp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:maxLines="1"
            android:hint="Enter amount (in Rs.)"
            android:fontFamily="@font/opensans"
            android:background="@drawable/rounded_card_corners"
            android:backgroundTint="@color/lightSkin"
            android:inputType="number"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/_11sdp"/>

        <Button
            android:id="@+id/btnumlaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/lightTextColor"
            android:textAllCaps="false"
            android:layout_gravity="center"
            android:fontFamily="@font/opensans"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/rounded_card_corners"
            android:backgroundTint="@color/colorPrimary"
            android:paddingTop="@dimen/_12sdp"
            android:paddingBottom="@dimen/_12sdp"
            android:paddingLeft="@dimen/_25sdp"
            android:paddingRight="@dimen/_25sdp"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold"
            android:text="Proceed To Pay"/>
    </LinearLayout>
</RelativeLayout>