<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:background="@drawable/more_card_corners"
    android:backgroundTint="@color/lightSkin" android:id="@+id/llmedmain"
    android:padding="@dimen/_10sdp" android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivmllimage"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp" />

    <TextView
        android:id="@+id/tvmlltitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensans"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:text="Meditation Song"
        android:textColor="@color/darkTextColor"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold" />
</LinearLayout>