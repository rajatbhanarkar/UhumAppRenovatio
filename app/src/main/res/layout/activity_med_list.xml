<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:clipToPadding="false"
    tools:context=".MedListActivity"
    android:id="@+id/rlmedlist">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/_15sdp">

        <ImageView
            android:id="@+id/ivmhaback"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_back_black"
            android:background="@color/periwinkle"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:cardElevation="0dp"
        android:layout_alignParentRight="true"
        app:cardCornerRadius="@dimen/_30sdp">

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/palePink"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvmlacatname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensans"
        android:layout_marginTop="@dimen/_38sdp"
        android:layout_centerHorizontal="true"
        android:text="WorkOut"
        android:textColor="@color/black"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ivmlacatimage"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_40sdp"
        android:layout_height="@dimen/_250sdp"
        android:padding="@dimen/_30sdp"
        android:src="@drawable/meditationlogo2"/>

    <ListView
        android:id="@+id/lvmedlist"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:padding="20dp"
        android:divider="@null"
        android:dividerHeight="10dp"
        android:layout_marginBottom="@dimen/_40sdp"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_280sdp" />

</RelativeLayout>